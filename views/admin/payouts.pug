extends layout 

block content
    section.content-header
        h1 Withdrawals
        
    // Main content
    section.content
        .row
            .col-md-12
                .box
                    .box-header.with-border
                        h3.box-title Pay Outs
                    .box-body
                        table.table.table-striped
                            thead
                                tr
                                    th Date
                                    th Investor
                                    th Balance
                                    th Bank 
                                    th Account #
                                    th Amount
                                    th Status
                                    th Action
                            tbody
                                each trnx in withdrawals 
                                    tr
                                        td= view.formatDate(trnx.createdAt)
                                        td= trnx.User.fullname
                                        td= '₦' + view.formatCurrency(trnx.balance)
                                        td= trnx.bank 
                                        td= trnx.account_number
                                        td= '₦' + view.formatCurrency(trnx.amount) 
                                        td= trnx.status
                                        td
                                            a(title="Cancel" data-toggle="tooltip")
                                                i.fa.fa-check.fa-lg(style="margin-right: 7px" title="Approve")
                                            i.fa.fa-times.fa-lg(title="Cancel" data-toggle="tooltip")    