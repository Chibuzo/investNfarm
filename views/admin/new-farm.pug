extends layout 

block content
    section.content-header
        h1
            | New Farm Category

    // Main content
    section.content  
        .row
            .col-md-12
                .box
                    .box-header(style="padding: 0")

                    .box-body
                        .row 
                            .col-md-12
                                a.btn.btn-default.btn.lg.pull-right(href="/admin/farms")
                                    .fa.fa-caret-left 
                                    |  Go Back 
                        .row 
                            .col-md-6.col-md-offset-3
                                h3 Create New Farm Category
                                br/
                                form(method="post" action="/admin/farms" encType="multipart/form-data")
                                    .form-group
                                        .row 
                                            .col-md-12     
                                                label Farm Name  
                                                input.form-control.input-lg(type="text" name="category_name")
                                    .form-group 
                                        .row 
                                            .col-md-12 
                                                label Description 
                                                textarea.form-control(name="about" rows="10")             
                                    .form-group 
                                        .row 
                                            .col-md-12
                                                label Model
                                                textarea.form-control(name="model" rows="10")    
                                    .form-group 
                                        .row 
                                            .col-md-12
                                                label Benefits 
                                                .benefit
                                                    br/
                                                    input.form-control.input-lg(type="text" name="benefit[]" placeholder="Benefit...") 
                                        .row#more-benefits 
                                            .col-md-10
                                                br/
                                                input.form-control.input-lg(type="text" name="benefit[]" placeholder="Benefit...")  
                                            .col-md-2 
                                                label
                                                button.btn.btn-danger.btn-lg#add-btn(type="button") Add  
                                    .form-group 
                                        .row 
                                            .col-md-12 
                                                label Farm Photo 
                                                input.form-control.input.lg(type="file" name="portfolio_photo")
                                    .form-group.text-center 
                                        br/
                                        input.btn.btn-success.btn-lg(type="submit" value="Publish Farm")

block scriptBlock
    script.
        $(document).ready(function() {
            $("#add-btn").click(function() {
                $(".benefit").clone().removeClass('benefit').insertBefore("#more-benefits")
            });
        });