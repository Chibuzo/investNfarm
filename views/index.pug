                            .accordion-body Every investment portfolio has it's own tenure
            .col-1  

block scriptBlock
    script(src="/javascripts/jquery.min.js")
    script(src="/javascripts/owl.carousel.min.js")  

    script. 
        const slide1 = document.querySelector('#slide1');
        const slide2 = document.querySelector('#slide2');

        document.querySelector('#show-slide2').addEventListener('click', function() {
            // hide slide1
            slide1.style.animate = "fade-out 0.5s ease-in";
            slide1.style.opacity = "0";
            slide1.classList.add('d-none');

            // show slide2 
            slide2.classList.remove('d-none');
            slide2.style.animate = "fade-in 0.5s ease-in";
            slide2.style.opacity = "1";
            this.style.borderLeftColor = "#fff";
            document.querySelector('#show-slide1').style.borderRightColor = "#329337";
        });

        document.querySelector('#show-slide1').addEventListener('click', function() {
            // hide slide2
            slide2.style.animate = "fade-out 0.5s ease-in";
            slide2.style.opacity = "0";
            slide2.classList.add('d-none');

            // show slide2
            slide1.classList.remove('d-none');
            slide1.style.animate = "fade-in 0.5s ease-in";
            slide1.style.opacity = "1";
            this.style.borderRightColor = "#fff";
            document.querySelector('#show-slide2').style.borderLeftColor = "#329337";
        });

        if (window.innerWidth <= 576) {
            document.querySelector('#add-slide').classList.add('owl-carousel');
        }

        $(document).ready(function(){
            $('.owl-carousel').owlCarousel({
                loop:true,
                margin:10,
                responsiveClass:true,
                responsive:{
                    0:{
                        items:1,
                        nav:true
                    },
                    600:{
                        items:3,
                        nav:false
                    },
                    1000:{
                        items:5,
                        nav:false,
                        loop:false
                    }
                }
            })
        });