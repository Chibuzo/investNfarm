script(src='/js/jquery.min.js')
// Bootstrap 3.3.7
script(src='/js/bootstrap.min.js')
// AdminLTE App
script(src='/js/adminlte.min.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js')
